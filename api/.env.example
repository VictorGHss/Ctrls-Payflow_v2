# ===== CONTA AZUL =====
CONTA_AZUL_CLIENT_ID=seu_client_id
CONTA_AZUL_CLIENT_SECRET=seu_client_secret
CONTA_AZUL_REDIRECT_URI=https://seu-dominio.com/api/oauth/callback

# ===== SEGURANÇA =====
MASTER_KEY=base64_encode_de_32_bytes_aleatorios
JWT_SECRET=seu_jwt_secret_aleatorio_aqui

# ===== SMTP =====
SMTP_HOST=smtp.seuhost.com
SMTP_PORT=587
SMTP_USER=seu_email@dominio.com
SMTP_PASSWORD=sua_senha_smtp
SMTP_FROM=seu_email@dominio.com
SMTP_REPLY_TO=seu_email@dominio.com
SMTP_USE_TLS=true
SMTP_TIMEOUT=10

# ===== POLLING =====
POLLING_INTERVAL_SECONDS=300
POLLING_INITIAL_LOOKBACK_DAYS=30
# Janela de segurança: voltar N minutos para não perder eventos
POLLING_SAFETY_WINDOW_MINUTES=10

# ===== API =====
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info

# ===== CLOUDFLARE TUNNEL =====
CLOUDFLARE_TUNNEL_TOKEN=seu_token_aqui

# ===== DATABASE =====
DATABASE_URL=sqlite:///./data/payflow.db

# ===== FALLBACK MEDICOS =====
# JSON ou CSV com mapping: nome_cliente -> email_medico
DOCTORS_FALLBACK_JSON={}

